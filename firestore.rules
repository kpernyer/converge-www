rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Demo requests - only allow write from authenticated functions
    match /demo-requests/{requestId} {
      // No client reads or writes - only server-side access
      allow read, write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
